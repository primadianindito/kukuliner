<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor">
<ImageView
    android:id="@+id/penjual_tambah_pesanan_image"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"/>
    <Button
        android:id="@+id/button_pesanan_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/blue_grey"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Upload Foto"
        android:elevation="4dp"
        android:layout_margin="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/penjual_tambah_pesanan_nama_makanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/user_icon"
            android:hint="Nama Makanan"
            android:inputType="text"
            android:textColor="@color/blue_grey"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/penjual_tambah_pesanan_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/user_icon"
            android:hint="Harga"
            android:inputType="text"
            android:textColor="@color/blue_grey"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_pesanan_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Data"
        android:textColor="@color/white"
        android:background="@color/blue_grey"
        android:padding="10dp"
        android:layout_margin="10dp"/>
</LinearLayout>