<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/subColor"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/user_photo_profil_edit"
        android:src="@drawable/tumpeng"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/user_edit_upload_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unggah Gambar"
        android:layout_margin="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="40px"
        android:gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/subColor"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">
<EditText
    android:id="@+id/user_edit_username"
    android:layout_width="match_parent"
    android:drawableRight="@drawable/user_icon"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:layout_margin="5dp"
    android:hint="Username"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/subColor"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">
        <EditText
            android:id="@+id/user_edit_password"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/user_icon"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="password"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/subColor"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">
        <EditText
            android:id="@+id/user_edit_nomorhp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/user_icon"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="phone"
            android:hint="Nomor HP"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/subColor"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">
        <EditText
            android:id="@+id/user_edit_email"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/user_icon"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="textEmailAddress"
            android:hint="Email"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/subColor"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">
        <EditText
            android:id="@+id/user_edit_alamat"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/user_icon"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:hint="alamat"/>
    </android.support.v7.widget.CardView>
</LinearLayout>